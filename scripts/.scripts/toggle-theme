#!/bin/env bash

check_dep() {
  command -v "$1" >/dev/null || return 1
}

ised() {
  sed --follow-symlinks -i "$@"
}

toggle_app() {
  local app=$1 style=$2

  case $app in
  kitty)
    check_dep kitty && kitty +kitten themes --reload-in=all "GitHub ${style^} Colorblind"
    ;;
  bottom)
    check_dep bottom && ised "s/theme = \"default-light\"/theme = \"default\"/" "$HOME/.config/bottom/bottom.toml"
    ;;
  foot)
    check_dep foot && ised "s,\(\binclude=~/.config/foot/\).*,\1modus_$([ "$style" = "light" ] && echo "operandi" || echo "vivendi").ini," "$HOME/.config/foot/foot.ini"
    ;;
  alacritty)
    check_dep alacritty && ised "s/github_$([ "$style" = "light" ] && echo "dark" || echo "light")_colorblind/github_${style}_colorblind/" "$HOME/.config/alacritty/theme.toml"
    ;;
  wallpaper)
    ln -sf "$HOME/.config/wallpapers/$style.jpg" "$HOME/.config/wallpapers/current.jpg"
    ;;
  emacs)
    emacsclient -e "(load-theme 'modus-$([ "$style" = "light" ] && echo "operandi" || echo "vivendi")-tinted :no-confirm)" >/dev/null
    ;;
  waybar)
    check_dep waybar && ised -z "s/$([ "$style" = "light" ] && echo "dark" || echo "light")/$style/" "$HOME/.config/waybar/style.css" && killall -SIGUSR2 waybar
    ;;
  rofi)
    local suffix=$([ "$style" = "light" ] && echo "" || echo "-dark")
    ised "s,themes/spotlight$([ "$style" = "light" ] && echo "-dark" || echo "").rasi,themes/spotlight$suffix.rasi," "$HOME/.config/sway/scripts/launch_rofi.sh"
    ;;
  esac
}

set_gsettings() {
  gsettings set "org.gnome.desktop.interface" "$1" "$2"
}

get_gsettings() {
  gsettings get "org.gnome.desktop.interface" "$1"
}

set_gtk() {
  local style=$1
  local theme=$([ "$style" = "light" ] && echo "Adwaita" || echo "Adwaita-dark")
  local dark=$([ "$style" = "light" ] && echo "false" || echo "true")
  local scheme=$([ "$style" = "light" ] && echo "prefer-light" || echo "prefer-dark")

  ised "s,\(gtk-theme-name=\).*,\1$theme, ; s,\(gtk-icon-theme-name=\).*,\1Adwaita, ; s,\(gtk-application-prefer-dark-theme=\).*,\1$dark," "$HOME/.config/gtk-3.0/settings.ini"
  ised "s,\(gtk-application-prefer-dark-theme=\).*,\1$dark," "$HOME/.config/gtk-4.0/settings.ini"
  set_gsettings "gtk-theme" "$theme"
  set_gsettings "color-scheme" "$scheme"
}

sync_remote() {
  local style=$1
  local scheme=$([ "$style" = "light" ] && echo "prefer-light" || echo "prefer-dark")

  for host in "daredevil" "hasurian"; do
    if ssh "$host" -q -o ConnectTimeout=1 -o BatchMode=yes exit; then
      ssh -qtt "$host" "gsettings set org.gnome.desktop.interface color-scheme '$scheme'"
    fi
  done
}

toggle_gnome() {
  local current_scheme=$(get_gsettings "color-scheme")
  local style=$([ "$current_scheme" = "'prefer-dark'" ] && echo "dark" || echo "light")
  local adw_theme=$([ "$style" = "light" ] && echo "adw-gtk3" || echo "adw-gtk3-dark")
  local dark=$([ "$style" = "light" ] && echo "false" || echo "true")

  set_gsettings "gtk-theme" "$adw_theme"
  ised "s,\(gtk-theme-name=\).*,\1$adw_theme, ; s,\(gtk-icon-theme-name=\).*,\1Adwaita, ; s,\(gtk-application-prefer-dark-theme=\).*,\1$dark," "$HOME/.config/gtk-3.0/settings.ini"

  [ "$style" = "light" ] && set_gsettings "color-scheme" "prefer-light"

  for app in kitty foot alacritty; do
    toggle_app "$app" "$style" &
  done

  sync_remote "$style" &
  toggle_app "bottom" "$style" &
}

toggle_sway() {
  check_dep sway || return 1

  local active_theme="$HOME/.cache/active_theme"
  local style=$([ "$(cat "$active_theme" 2>/dev/null)" = "light" ] && echo "dark" || echo "light")

  echo "$style" >"$active_theme"

  local modus=$([ "$style" = "light" ] && echo "operandi" || echo "vivendi")
  local adw_theme=$([ "$style" = "light" ] && echo "adw-gtk3" || echo "adw-gtk3-dark")
  local scheme=$([ "$style" = "light" ] && echo "prefer-light" || echo "prefer-dark")
  local theme=$([ "$style" = "light" ] && echo "Adwaita" || echo "Adwaita-dark")
  local dark=$([ "$style" = "light" ] && echo "false" || echo "true")

  ised "s,themes/modus_$([ "$style" = "light" ] && echo "vivendi" || echo "operandi"),themes/modus_$modus," "$HOME/.config/sway/config"
  set_gsettings "gtk-theme" "$adw_theme"
  set_gsettings "color-scheme" "$scheme"
  ised "s,\(gtk-theme-name=\).*,\1$theme, ; s,\(gtk-icon-theme-name=\).*,\1Adwaita, ; s,\(gtk-application-prefer-dark-theme=\).*,\1$dark," "$HOME/.config/gtk-3.0/settings.ini"

  swaymsg reload &
  toggle_app "waybar" "$style" &
  toggle_app "rofi" "$style" &
  toggle_app "alacritty" "$style" &
  toggle_app "wallpaper" "$style" &
}

CURRENT_DESKTOP=${XDG_CURRENT_DESKTOP:-$1}

case "${CURRENT_DESKTOP,,}" in
gnome) toggle_gnome ;;
sway*) toggle_sway ;;
esac
