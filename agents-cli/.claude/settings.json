{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://luddite:4317",
    "OTEL_SERVICE_NAME": "claude-veilfire"
  },
  "enabledPlugins": {
    "essentials@restaumatic-toolkit": true,
    "jonatan-toolkit@restaumatic-toolkit": true,
    "taskmaster@taskmaster": true,
    "taskmaster": {
      "marketplace": "taskmaster"
    },
    "document-skills@skills": true,
    "example-skills@skills": true
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
    "hub": {
      "transport": "http",
      "url": "http://luddite:3000/mcp"
    }
  },
  "mcp": {
    "allowed": [
      "hub"
    ],
    "excluded": []
  },
  "extraKnownMarketplaces": {
    "task-master": {
      "source": {
        "source": "github",
        "repo": "eyaltoledano/claude-task-master"
      }
    },
    "restaumatic-toolkit": {
      "source": {
        "source": "github",
        "repo": "restaumatic/claude-code-toolkit"
      }
    },
    "skills": { 
      "source": {
        "source": "github",
        "repo": "anthropics/skills"
    }
  }
}
