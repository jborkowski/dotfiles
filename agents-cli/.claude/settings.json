{
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_LOG_USER_PROMPTS": 1,
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "http/json",
    "OTEL_EXPORTER_OTLP_METRICS_PROTOCOL": "http/json",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://telemetry.j14i.me"
  },
  "permissions": {
    "allow": [
      "Bash(task-master: :*)",
      "Bash(uv: :*)"
    ],
    "deny": [],
    "ask": []
  },
  "enabledPlugins": {
    "essentials@restaumatic-toolkit": true,
    "jonatan-toolkit@restaumatic-toolkit": true,
    "taskmaster@taskmaster": true,
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "jb@restaumatic-toolkit": true
  },
  "extraKnownMarketplaces": {
    "taskmaster": {
      "source": {
        "source": "github",
        "repo": "eyaltoledano/claude-task-master"
      }
    },
    "restaumatic-toolkit": {
      "source": {
        "source": "github",
        "repo": "restaumatic/claude-code-toolkit"
      }
    }
  },
  "alwaysThinkingEnabled": false,
  "mcp": {
    "allowed": [
      "hub"
    ],
    "excluded": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/load-memory.sh"
          }
        ]
      }
    ]
  }
}
