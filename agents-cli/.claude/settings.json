{
  "cleanupPeriodDays": 99999,
  "env": {
    "API_TIMEOUT_MS": "3000000"
  },
  "permissions": {
    "allow": [
      "Bash(uv: :*)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "opus",
  "hooks": {},
  "enabledPlugins": {
    "re@restaumatic-toolkit": true,
    "jb@restaumatic-toolkit": true,
    "frontend-design@claude-code-plugins": false,
    "superpowers@superpowers-marketplace": false,
    "glm-plan-usage@zai-coding-plugins": true
  },
  "extraKnownMarketplaces": {
    "restaumatic-toolkit": {
      "source": {
        "source": "github",
        "repo": "restaumatic/claude-code-toolkit"
      }
    }
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
    "figma": {
      "type": "http",
      "url": "http://127.0.0.1:3845/mcp"
    }
  },
  "mcp": {
    "allowed": [
      "figma"
    ],
    "excluded": []
  }
}
