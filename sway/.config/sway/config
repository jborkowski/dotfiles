default_border none

### Variables
#
set $mod Mod4
set $left h 
set $down k
set $up j
set $right l
# set $term foot
set $term alacritty

set $rofi_cmd $HOME/.config/sway/scripts/launch_rofi.sh
set $menu $rofi_cmd 

set $shotman_cmd $HOME/.local/bin/shotman --capture         

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

