# General
placement_strategy center
shell zsh
shell_integration no-cursor
enable_audio_bell no
listen_on unix:/tmp/kitty
macos_option_as_alt yes
# macos_show_window_title_in all
# macos_traditional_fullscreen yes

font_family      Iosevka Regular
bold_font        Iosevka Medium
italic_font      Iosevka Italic
bold_italic_font Iosevka Medium Italic
font_size        12.5

# Scrollback
scrollback_lines 8000
scrollback_pager_history_size 1024

# Mappings
#map alt+w copy_to_clipboard
#map ctrl+y paste_from_clipboard

map ctrl+. send_text all \x1b[46;5u
map ctrl+, send_text all \x1b[44;5u
map ctrl+; send_text all \x1b[59;5u
map ctrl+- send_text all \x1b[45;5u
map ctrl+= send_text all \x1b[61;5u
map ctrl+' send_text all \x1b[39;5u
map ctrl+( send_text all \x1b[40;5u
map ctrl+) send_text all \x1b[41;5u

map ctrl+shift+. send_text all \x1b[46;6u
map ctrl+shift+, send_text all \x1b[44;6u

map ctrl+shift+i next_tab
map clrl+shitf+e previous_tabn

cursor_shape block
default_pointer_shape beam
tab_bar_style fade
tab_fade 1 1 1 1
window_padding_width 2

# Other
include ./current-theme.conf

enabled_layouts tall, fat, grid, stack


# BEGIN_KITTY_THEME
# Modus Vivendi
include current-theme.conf
# END_KITTY_THEME